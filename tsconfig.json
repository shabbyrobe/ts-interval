{
	"compilerOptions": {
		"target": "es2017",
		"lib": ["es5", "es6", "es2017", "dom"],
		"sourceMap": true,
		"noImplicitAny": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"removeComments": false,
		"outDir": "./dist",
		"allowJs": true,
    "esModuleInterop": true,
		"moduleResolution": "node"
	},

	"include": [
		"./src/**/*.ts",
		"./src/*.ts"
	],

	"exclude": [
		"dist",
		"node_modules",
		"static",
		"typings"
	]
}
